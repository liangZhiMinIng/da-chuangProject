<view class="flex-style">
  <view class="flex-item active" bindtouchstart="goToCar">驾车</view>
</view>
<view class="map_box">
  <map id="navi_map" longitude="{{longitude}}" latitude="{{latitude}}" scale="12" markers="{{markers}}" polyline="{{polyline}}"></map>
</view>

<view class="text_box">
  <input bindinput="bindInput" placeholder="搜索" focus="true" />
  
  <view bindtouchstart="bindSearch" data-location="{{i.location}}" data-keywords="{{i.name}}" class="text_box_search_tips" wx:key="index" wx:for="{{tips}}" wx:for-item="i">
    {{i.name}}
  </view>
</view>
<view class="text_box_2">
  <view class="text">{{distance}}</view>
  <view class="text">{{cost}}</view>
  <view class="detail_button" bindtouchstart="goDetail">详情</view>
  <view wx:for="{{steps}}" wx:key="index" wx:for-item="i">
  {{i.instruction}}
  </view>
</view>